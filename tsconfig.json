{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",

  "compilerOptions": {
    "types": [
      "vitest",
      "@vitest/browser/matchers",
      "@vitest/browser/providers/playwright",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "types",
    "nuxt.config.ts",
    "components",
    "composables",
    "pages",
    "stores",
    "utils",
    "app.vue",
    "**/*.ts",
    "**/*.vue"
  ]
}
